<div class="container">
  <h1>Weekly Tide</h1>
  <%= form_for("/", method: "get", :class => "form-inline") do %>
    <%= label_tag 'selected_date', 'Tide for week of:'%>
    <%= select_tag "date", options_for_select(@daily_data_date, @selected_date), onchange: "this.form.submit();"%>
  <% end %>
  <%= line_chart @week_tide_sun_array, library: {legend: 'bottom', colors: ["#3366cc", "#ffc107", "purple"]} %>
</div>
